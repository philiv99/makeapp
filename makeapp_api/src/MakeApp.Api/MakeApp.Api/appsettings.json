{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    }
  },
  "MakeApp": {
    "Folders": {
      "Sandbox": ""
    },
    "GitHub": {
      "ApiBaseUrl": "https://api.github.com"
    },
    "Llm": {
      "DefaultProvider": "copilot",
      "Providers": {
        "copilot": {
          "Model": "gpt-5"
        }
      }
    },
    "Agent": {
      "MaxRetries": 3,
      "MaxIterations": 50,
      "AutoApprove": false
    },
    "Git": {
      "DefaultBranch": "main",
      "SignCommits": false,
      "AutoPush": true
    },
    "Ui": {
      "VerboseOutput": false,
      "ShowProgress": true
    },
    "Timeouts": {
      "CommandTimeoutSeconds": 300,
      "HttpTimeoutSeconds": 30
    },
    "Limits": {
      "MaxFileSizeBytes": 10485760,
      "MaxConcurrentWorkflows": 5
    }
  },
  "User": {
    "GitHubUsername": "",
    "GitHubOwner": "",
    "DefaultBranch": "main",
    "AutoCreateRemote": true,
    "SandboxPath": ""
  }
}
